<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/text"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/default_margin"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_vertical">

            <com.striketec.mobile.customview.CustomDigitView
                android:id="@+id/desiredtype"
                android:layout_width="@dimen/default_editheight"
                android:layout_height="@dimen/default_editheight"
                android:text="1"
                android:gravity="center"
                android:textAllCaps="true"
                android:textSize="@dimen/textsize_17"
                android:background="@drawable/punch_success_first">

            </com.striketec.mobile.customview.CustomDigitView>

        </LinearLayout>

        <LinearLayout
            android:layout_marginLeft="@dimen/default_margin"
            android:id="@+id/rounddetailinfoview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1.7"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.striketec.mobile.customview.CustomTextView
                    android:id="@+id/label_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/type"
                    android:textSize="@dimen/textsize_10"
                    android:textColor="@color/punches_text"
                    android:textAllCaps="true"
                    android:includeFontPadding="false"
                    />

                <com.striketec.mobile.customview.CustomTextView
                    android:layout_marginTop="@dimen/default_smallestpadding"
                    android:id="@+id/type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/punches_text"
                    android:text="5:00"
                    android:textAllCaps="true"
                    android:textSize="@dimen/default_textsize"/>

                <com.striketec.mobile.customview.CustomTextView
                    android:id="@+id/hand"
                    android:layout_marginTop="@dimen/default_smallestpadding"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Left"
                    android:textSize="@dimen/textsize_10"
                    android:textColor="@color/punches_text"
                    android:textAllCaps="true"
                    android:includeFontPadding="false"
                    />

            </LinearLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/unselectbg"
                android:layout_marginLeft="@dimen/default_smallestpadding"
                android:layout_marginRight="@dimen/default_smallestpadding"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.striketec.mobile.customview.CustomTextView
                    android:id="@+id/label_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/label_time"
                    android:textAllCaps="true"
                    android:textSize="@dimen/textsize_10"
                    android:textColor="@color/speed_color"
                    android:includeFontPadding="false"/>

                <com.striketec.mobile.customview.CustomDigitView
                    android:layout_marginTop="@dimen/default_smallestpadding"
                    android:id="@+id/duration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/speed_color"                    android:text="220"
                    android:textSize="@dimen/textsize_25"/>

                <com.striketec.mobile.customview.CustomTextView
                    android:id="@+id/duration_unit"
                    android:layout_marginTop="@dimen/default_smallestpadding"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/secs"
                    android:textSize="@dimen/textsize_10"
                    android:textColor="@color/speed_color"
                    android:textAllCaps="true"
                    android:includeFontPadding="false"
                    />

            </LinearLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/unselectbg"
                android:layout_marginLeft="@dimen/default_smallestpadding"
                android:layout_marginRight="@dimen/default_smallestpadding"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.striketec.mobile.customview.CustomTextView
                    android:id="@+id/label_speed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/speed"
                    android:textAllCaps="true"
                    android:textSize="@dimen/textsize_10"
                    android:textColor="@color/force_color"
                    android:includeFontPadding="false"/>

                <com.striketec.mobile.customview.CustomDigitView
                    android:layout_marginTop="@dimen/default_smallestpadding"
                    android:id="@+id/speed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/force_color"
                    android:text="310"
                    android:textSize="@dimen/textsize_25"/>

                <com.striketec.mobile.customview.CustomTextView
                    android:id="@+id/speed_unit"
                    android:layout_marginTop="@dimen/default_smallestpadding"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/speed_unit"
                    android:textSize="@dimen/textsize_10"
                    android:textColor="@color/force_color"
                    android:textAllCaps="true"
                    android:includeFontPadding="false"
                    />


            </LinearLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/unselectbg"
                android:layout_marginLeft="@dimen/default_smallestpadding"
                android:layout_marginRight="@dimen/default_smallestpadding"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.striketec.mobile.customview.CustomTextView
                    android:id="@+id/label_power"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/power"
                    android:textAllCaps="true"
                    android:textSize="@dimen/textsize_10"
                    android:textColor="@color/force_color"
                    android:includeFontPadding="false"/>

                <com.striketec.mobile.customview.CustomDigitView
                    android:layout_marginTop="@dimen/default_smallestpadding"
                    android:id="@+id/power"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/force_color"
                    android:text="310"
                    android:textSize="@dimen/textsize_25"/>

                <com.striketec.mobile.customview.CustomTextView
                    android:id="@+id/power_unit"
                    android:layout_marginTop="@dimen/default_smallestpadding"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/force_unit"
                    android:textSize="@dimen/textsize_10"
                    android:textColor="@color/force_color"
                    android:textAllCaps="true"
                    android:includeFontPadding="false"
                    />


            </LinearLayout>

        </LinearLayout>


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/selectbg"/>

</LinearLayout>
