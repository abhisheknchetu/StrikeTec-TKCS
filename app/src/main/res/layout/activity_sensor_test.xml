<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.tabs.training.sensortest.SensorTestActivity"
    android:background="@drawable/background"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="20dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="@dimen/default_btnheight">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="0.6"
                android:layout_height="@dimen/default_editheight"
                android:orientation="vertical"
                android:layout_gravity="bottom">

                <com.striketec.mobile.customview.CustomEditText
                    android:id="@+id/leftsensorid"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/default_editheight"
                    android:hint="Left sensor id"
                    android:paddingLeft="@dimen/default_smallpadding"
                    android:paddingRight="@dimen/default_smallpadding"
                    android:background="@color/transparent"
                    android:textColorHint="@color/edit_hint"
                    android:textColor="@color/white"
                    android:textSize="@dimen/default_textsize"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="5dp"
                    android:background="@drawable/bg_editbase"
                    android:layout_alignParentBottom="true"/>
            </LinearLayout>

            <com.striketec.mobile.customview.HexagonButton
                android:id="@+id/leftsensorconnect"
                android:layout_width="0dp"
                android:layout_height="@dimen/default_smallbtnheight"
                android:layout_gravity="bottom"
                android:layout_marginLeft="10dp"
                android:layout_weight="0.4"
                android:padding="1dp"
                android:text="@string/connect"
                android:textColor="@color/lightblack"
                app:fill="true"
                app:hexagon_color="@color/orange" />

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="@dimen/default_btnheight">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="0.6"
                android:layout_height="@dimen/default_editheight"
                android:orientation="vertical"
                android:layout_gravity="bottom">

                <com.striketec.mobile.customview.CustomEditText
                    android:id="@+id/rightsensorid"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/default_editheight"
                    android:hint="Right sensor id"
                    android:paddingLeft="@dimen/default_smallpadding"
                    android:paddingRight="@dimen/default_smallpadding"
                    android:background="@color/transparent"
                    android:textColorHint="@color/edit_hint"
                    android:textColor="@color/white"
                    android:textSize="@dimen/default_textsize"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="5dp"
                    android:background="@drawable/bg_editbase"
                    android:layout_alignParentBottom="true"/>
            </LinearLayout>

            <com.striketec.mobile.customview.HexagonButton
                android:id="@+id/rightsensorconnect"
                android:layout_marginLeft="10dp"
                android:layout_width="0dp"
                android:layout_weight="0.4"
                android:layout_height="@dimen/default_smallbtnheight"
                android:textColor="@color/lightblack"
                android:layout_gravity="bottom"
                android:padding="1dp"
                android:text="@string/connect"
                app:fill="true"
                app:hexagon_color="@color/orange"/>

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="50dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.striketec.mobile.customview.CustomDigitView
                    android:id="@+id/forceview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="@color/punches_text"
                    android:textSize="30sp"
                    android:text="300"/>

                <com.striketec.mobile.customview.CustomDigitView
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:text="Force"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.striketec.mobile.customview.CustomDigitView
                    android:id="@+id/speedview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="@color/punches_text"
                    android:textSize="30sp"
                    android:text="300"/>

                <com.striketec.mobile.customview.CustomDigitView
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:text="Speed"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.striketec.mobile.customview.CustomDigitView
                    android:id="@+id/countview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="@color/punches_text"
                    android:textSize="30sp"
                    android:text="300"/>

                <com.striketec.mobile.customview.CustomDigitView
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:text="Count"/>

            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <com.striketec.mobile.customview.HexagonButton
            android:id="@+id/starttraining"
            android:layout_width="match_parent"
            android:layout_height="@dimen/default_btnheight"
            android:textColor="@color/lightblack"
            android:layout_gravity="bottom"
            android:text="@string/starttraining"
            android:padding="1dp"
            app:fill="true"
            android:textSize="@dimen/default_textsize"

            app:hexagon_color="@color/orange"/>

    </LinearLayout>

</LinearLayout>
