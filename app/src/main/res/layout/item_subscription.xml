<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_margin="@dimen/default_smallestpadding"
    android:padding="@dimen/default_smallmargin"
    android:background="@drawable/bg_rectangle_default">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.6"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.4"
                android:gravity="center"
                android:padding="@dimen/default_smallestpadding">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:adjustViewBounds="true"
                    android:src="@drawable/icon_play" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <com.striketec.mobile.customview.CustomTextView
                    android:id="@+id/tutorial_number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="5 tutorials"
                    android:textAllCaps="true"
                    android:textColor="@color/white"
                    android:textSize="@dimen/textsize_11" />

                <com.striketec.mobile.customview.CustomTextView
                    android:id="@+id/tutorial_value"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Additional for $1.99"
                    android:textColor="@color/white_opacity"
                    android:textSize="@dimen/textsize_9" />


            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/white_opacity" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.4"
                android:gravity="center"
                android:padding="@dimen/default_smallestpadding">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:adjustViewBounds="true"
                    android:src="@drawable/icon_tournaments" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <com.striketec.mobile.customview.CustomTextView
                    android:id="@+id/tournament_number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="2 tournaments"
                    android:textAllCaps="true"
                    android:textColor="@color/white"
                    android:textSize="@dimen/textsize_11" />

                <com.striketec.mobile.customview.CustomTextView
                    android:id="@+id/tournament_value"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Additional for $1.99"
                    android:textColor="@color/white_opacity"
                    android:textSize="@dimen/textsize_9" />


            </LinearLayout>


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/white_opacity" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.4"
                android:gravity="center"
                android:padding="@dimen/default_smallestpadding">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:adjustViewBounds="true"
                    android:src="@drawable/icon_battle" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <com.striketec.mobile.customview.CustomTextView
                    android:id="@+id/battle_number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="2 battles"
                    android:textAllCaps="true"
                    android:textColor="@color/white"
                    android:textSize="@dimen/textsize_11" />

                <com.striketec.mobile.customview.CustomTextView
                    android:id="@+id/battle_value"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Additional for $1.99"
                    android:textColor="@color/white_opacity"
                    android:textSize="@dimen/textsize_9" />


            </LinearLayout>


        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.4"
        android:orientation="vertical">

        <com.striketec.mobile.customview.CustomTextView
            android:id="@+id/plan_type"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/bg_rectangle_topright_alphadefault"
            android:gravity="center"
            android:text="Free Plan"
            android:textColor="@color/white"
            android:textSize="@dimen/default_textsize" />

        <com.striketec.mobile.customview.CustomTextView
            android:id="@+id/plan_value"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:background="@color/orange"
            android:gravity="center"
            android:text="$0.0"
            android:textColor="@color/white"
            android:textSize="@dimen/textsize_35" />

        <com.striketec.mobile.customview.CustomTextView
            android:id="@+id/plan_duration"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/bg_rectangle_bottom_alphadefault"
            android:gravity="center"
            android:text="Until exhausted"
            android:textColor="@color/white"
            android:textSize="@dimen/textsize_10" />

    </LinearLayout>

</LinearLayout>
