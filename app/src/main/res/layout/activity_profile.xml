<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    tools:context="com.striketec.mobile.activity.tabs.more.AboutusActivity"
    android:background="@drawable/background">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_300"
                >

                <ImageView
                    android:id="@+id/avatar"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/default_profil"
                    android:scaleType="fitXY"
                    android:alpha="0.7"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/titleview_height">

                    <ImageView
                        android:paddingLeft="@dimen/titleimage_padding"
                        android:id="@+id/back"
                        android:adjustViewBounds="true"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:paddingRight="@dimen/titleimage_padding"
                        android:paddingTop="@dimen/titleimage_padding"
                        android:paddingBottom="@dimen/titleimage_padding"
                        android:src="@drawable/back"/>

                    <ImageView
                        android:id="@+id/editprofile"
                        android:adjustViewBounds="true"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:paddingRight="@dimen/titleimage_padding"
                        android:paddingTop="@dimen/titleimage_padding"
                        android:paddingBottom="@dimen/titleimage_padding"
                        android:src="@drawable/settings"
                        android:layout_alignParentEnd="true"
                        />

                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/default_padding"
                    android:layout_alignParentBottom="true"
                    android:orientation="vertical">

                    <com.striketec.mobile.customview.CustomTextView
                        android:id="@+id/fname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:textSize="@dimen/textsize_30"/>

                    <LinearLayout
                        android:layout_marginTop="@dimen/default_smallestpadding"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <com.striketec.mobile.customview.CustomTextView
                            android:id="@+id/lname"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textColor="@color/white"
                            android:textStyle="bold"
                            android:textSize="@dimen/textsize_30"/>

                        <LinearLayout
                            android:paddingTop="@dimen/default_smallestpadding"
                            android:layout_marginLeft="@dimen/default_padding"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center">

                            <ImageView
                                android:id="@+id/skill_image"
                                android:layout_width="@dimen/width_17"
                                android:layout_height="@dimen/width_17"
                                android:src="@drawable/checked_punches_icon"/>

                            <com.striketec.mobile.customview.CustomTextView
                                android:id="@+id/skill_content"
                                android:layout_marginLeft="@dimen/default_smallestpadding"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textAllCaps="true"
                                android:text="@string/skill_pro"
                                android:textColor="@color/first_punch"
                                android:textSize="@dimen/textsize_9"/>

                        </LinearLayout>

                    </LinearLayout>

                    <com.striketec.mobile.customview.CustomTextView
                        android:layout_marginTop="@dimen/default_smallestpadding"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/default_textsize"
                        android:textColor="@color/white"
                        android:text="12-3 (W-L) / 80,900 PTS"/>

                </LinearLayout>


            </RelativeLayout>

            <LinearLayout
                android:id="@+id/social_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/default_padding"
                android:orientation="horizontal"
                android:background="@color/popup_bg">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <com.striketec.mobile.customview.CustomTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/followers"
                        android:textSize="@dimen/textsize_11"
                        android:textColor="@color/punches_text"
                        android:textAllCaps="true"
                        android:includeFontPadding="false"
                        />

                    <com.striketec.mobile.customview.CustomDigitView
                        android:layout_marginTop="@dimen/default_smallestpadding"
                        android:id="@+id/followercount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:text="0"
                        android:textSize="@dimen/textsize_25"/>

                </LinearLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/unselectbg"
                    android:layout_marginLeft="@dimen/default_padding"
                    android:layout_marginRight="@dimen/default_padding"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <com.striketec.mobile.customview.CustomTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/following"
                        android:textAllCaps="true"
                        android:textSize="@dimen/textsize_11"
                        android:textColor="@color/punches_text"
                        android:includeFontPadding="false"/>

                    <com.striketec.mobile.customview.CustomDigitView
                        android:layout_marginTop="@dimen/default_smallestpadding"
                        android:id="@+id/followingcount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:text="0"
                        android:textSize="@dimen/textsize_25"/>

                </LinearLayout>

                <View
                    android:id="@+id/rounddivider"
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/unselectbg"
                    android:layout_marginLeft="@dimen/default_padding"
                    android:layout_marginRight="@dimen/default_padding"/>

                <LinearLayout
                    android:id="@+id/challengeparent"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <com.striketec.mobile.customview.CustomTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/tabchallenges"
                        android:textAllCaps="true"
                        android:textSize="@dimen/textsize_11"
                        android:textColor="@color/punches_text"
                        android:singleLine="true"
                        android:ellipsize="end"
                        android:includeFontPadding="false"/>

                    <com.striketec.mobile.customview.CustomDigitView
                        android:layout_marginTop="@dimen/default_smallestpadding"
                        android:id="@+id/challengecount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:text="0"
                        android:textSize="@dimen/textsize_25"/>

                </LinearLayout>

                <ImageView
                    android:layout_marginLeft="@dimen/default_margin"
                    android:id="@+id/nextweek"
                    android:adjustViewBounds="true"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/width_17"
                    android:src="@drawable/arrow_right"
                    android:layout_gravity="center_vertical"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="@dimen/default_smallpadding"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="@dimen/default_margin"
                >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/default_smallestpadding"
                    android:paddingBottom="@dimen/default_smallestpadding">

                    <com.striketec.mobile.customview.CustomTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/lastachievement"
                        android:textColor="@color/punches_text"
                        android:textSize="@dimen/textsize_22"
                        android:layout_centerVertical="true"
                        android:textAllCaps="true"
                        />

                    <ImageView
                        android:adjustViewBounds="true"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/width_17"
                        android:src="@drawable/arrow_right"
                        android:layout_gravity="center_vertical"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        />

                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/default_smallestpadding"
                    android:layout_marginBottom="@dimen/default_margin">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center_horizontal">

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/width_80"
                            >

                            <ImageView
                                android:id="@+id/achieve_icon"
                                android:layout_marginTop="@dimen/default_smallestpadding"
                                android:adjustViewBounds="true"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:src="@drawable/belts_icon"/>

                            <com.striketec.mobile.customview.CustomTextView
                                android:layout_alignEnd="@+id/achieve_icon"
                                android:layout_width="@dimen/default_smallbtnheight"
                                android:layout_height="@dimen/default_smallbtnheight"
                                android:background="@drawable/oval_bg"
                                android:layout_marginRight="@dimen/default_smallestpadding"
                                android:textSize="@dimen/default_textsize"
                                android:textColor="@color/white"
                                android:text="3"
                                android:gravity="center"/>

                        </RelativeLayout>

                        <com.striketec.mobile.customview.CustomTextView
                            android:layout_marginTop="@dimen/default_smallestpadding"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/label_belts"
                            android:textAllCaps="true"
                            android:textSize="@dimen/default_textsize"
                            android:textColor="@color/white"/>

                    </LinearLayout>

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@color/unselectbg"
                        android:layout_marginLeft="@dimen/default_padding"
                        android:layout_marginRight="@dimen/default_padding"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center_horizontal">

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/width_80"
                            >

                            <ImageView
                                android:id="@+id/discipline_icon"
                                android:layout_marginTop="@dimen/default_smallestpadding"
                                android:adjustViewBounds="true"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:src="@drawable/icon_discipline"/>

                        </RelativeLayout>

                        <com.striketec.mobile.customview.CustomTextView
                            android:layout_marginTop="@dimen/default_smallestpadding"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/label_discipline"
                            android:textAllCaps="true"
                            android:textSize="@dimen/default_textsize"
                            android:textColor="@color/white"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center_horizontal">

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/width_80"
                            >

                            <ImageView
                                android:id="@+id/ironfirst_icon"
                                android:layout_marginTop="@dimen/default_smallestpadding"
                                android:adjustViewBounds="true"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:src="@drawable/icon_ironfirst"/>

                        </RelativeLayout>

                        <com.striketec.mobile.customview.CustomTextView
                            android:layout_marginTop="@dimen/default_smallestpadding"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/label_ironfirst"
                            android:textAllCaps="true"
                            android:textSize="@dimen/default_textsize"
                            android:textColor="@color/white"/>

                    </LinearLayout>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@drawable/separator"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/default_margin"
                    android:paddingBottom="@dimen/default_smallestpadding">

                    <com.striketec.mobile.customview.CustomTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/statistics"
                        android:textColor="@color/punches_text"
                        android:textSize="@dimen/textsize_22"
                        android:layout_centerVertical="true"
                        android:textAllCaps="true"
                        />

                    <ImageView
                        android:adjustViewBounds="true"
                        android:layout_marginLeft="@dimen/default_margin"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/width_17"
                        android:src="@drawable/arrow_right"
                        android:layout_gravity="center_vertical"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        />

                </RelativeLayout>

                <LinearLayout
                    android:layout_marginTop="@dimen/default_smallestpadding"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <com.striketec.mobile.customview.CustomTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/avgcount"
                            android:textSize="@dimen/textsize_11"
                            android:textColor="@color/orange"
                            android:textAllCaps="true"
                            android:includeFontPadding="false"
                            />

                        <com.striketec.mobile.customview.CustomDigitView
                            android:layout_marginTop="@dimen/default_smallestpadding"
                            android:id="@+id/avgcount_value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/orange"
                            android:text="0"
                            android:textSize="@dimen/textsize_25"/>

                        <com.striketec.mobile.customview.CustomTextView
                            android:layout_marginTop="@dimen/default_smallestpadding"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/unit_avgcount"
                            android:textSize="@dimen/textsize_10"
                            android:textColor="@color/orange"
                            android:textAllCaps="true"
                            android:includeFontPadding="false"
                            />

                    </LinearLayout>

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@color/unselectbg"
                        android:layout_marginLeft="@dimen/default_padding"
                        android:layout_marginRight="@dimen/default_padding"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <com.striketec.mobile.customview.CustomTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/avgspeed"
                            android:textAllCaps="true"
                            android:textSize="@dimen/textsize_11"
                            android:textColor="@color/speed_color"
                            android:includeFontPadding="false"/>

                        <com.striketec.mobile.customview.CustomDigitView
                            android:layout_marginTop="@dimen/default_smallestpadding"
                            android:id="@+id/avgspeed_value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/speed_color"
                            android:text="0"
                            android:textSize="@dimen/textsize_25"/>

                        <com.striketec.mobile.customview.CustomTextView
                            android:layout_marginTop="@dimen/default_smallestpadding"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/speed_unit"
                            android:textSize="@dimen/textsize_10"
                            android:textColor="@color/speed_color"
                            android:textAllCaps="true"
                            android:includeFontPadding="false"
                            />

                    </LinearLayout>

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@color/unselectbg"
                        android:layout_marginLeft="@dimen/default_padding"
                        android:layout_marginRight="@dimen/default_padding"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <com.striketec.mobile.customview.CustomTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/avgpower"
                            android:textAllCaps="true"
                            android:textSize="@dimen/textsize_11"
                            android:textColor="@color/force_color"
                            android:singleLine="true"
                            android:ellipsize="end"
                            android:includeFontPadding="false"/>

                        <com.striketec.mobile.customview.CustomDigitView
                            android:layout_marginTop="@dimen/default_smallestpadding"
                            android:id="@+id/avgforce_value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/force_color"
                            android:text="0"
                            android:textSize="@dimen/textsize_25"/>

                        <com.striketec.mobile.customview.CustomTextView
                            android:layout_marginTop="@dimen/default_smallestpadding"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/force_unit"
                            android:textSize="@dimen/textsize_10"
                            android:textColor="@color/force_color"
                            android:textAllCaps="true"
                            android:includeFontPadding="false"
                            />

                    </LinearLayout>

                </LinearLayout>

                <View
                    android:layout_marginTop="@dimen/default_margin"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@drawable/separator"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/tablayout_mainheight"
                    android:gravity="center_vertical">

                    <com.striketec.mobile.customview.CustomTextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="@string/totaltimetrained"
                        android:textColor="@color/white"
                        android:textSize="@dimen/default_textsize"
                        android:layout_centerVertical="true"
                        android:paddingLeft="@dimen/default_margin"
                        android:paddingRight="@dimen/default_margin"/>

                    <com.striketec.mobile.customview.CustomTextView
                        android:layout_width="0dp"
                        android:layout_weight="0.8"
                        android:layout_height="wrap_content"
                        android:text="00:00:00"
                        android:textColor="@color/punches_text"
                        android:textSize="@dimen/default_textsize"
                        android:layout_centerVertical="true"
                        android:paddingLeft="@dimen/default_margin"
                        android:paddingRight="@dimen/default_margin"/>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@drawable/separator"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/tablayout_mainheight"
                    android:gravity="center_vertical">

                    <com.striketec.mobile.customview.CustomTextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="@string/totaldaystrained"
                        android:textColor="@color/white"
                        android:textSize="@dimen/default_textsize"
                        android:layout_centerVertical="true"
                        android:paddingLeft="@dimen/default_margin"
                        android:paddingRight="@dimen/default_margin"/>

                    <com.striketec.mobile.customview.CustomTextView
                        android:layout_width="0dp"
                        android:layout_weight="0.8"
                        android:layout_height="wrap_content"
                        android:text="0 days"
                        android:textColor="@color/punches_text"
                        android:textSize="@dimen/default_textsize"
                        android:layout_centerVertical="true"
                        android:paddingLeft="@dimen/default_margin"
                        android:paddingRight="@dimen/default_margin"/>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@drawable/separator"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/default_margin"
                    android:layout_marginRight="@dimen/default_margin"
                    android:layout_marginBottom="@dimen/default_margin"
                    android:orientation="vertical">

                    <com.striketec.mobile.customview.CustomTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/challengehistory"
                        android:textColor="@color/punches_text"
                        android:textSize="@dimen/textsize_22"
                        android:textAllCaps="true"
                        />

                    <com.striketec.mobile.customview.CustomTextView
                        android:layout_marginTop="@dimen/default_smallestpadding"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/default_textsize"
                        android:textColor="@color/white"
                        android:text="12-3 (W-L) / 80,900 PTS"/>

                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/default_width">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/default_alphacolor"
                        />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/default_alphacolor"
                        android:layout_alignParentBottom="true"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <com.striketec.mobile.customview.CustomTextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="match_parent"
                            android:textColor="@color/orange"
                            android:textSize="@dimen/textsize_20"
                            android:text="@string/win"
                            android:textAllCaps="true"
                            android:gravity="center_vertical|end"
                            android:paddingRight="@dimen/height_20"/>

                        <com.striketec.mobile.customview.CustomTextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="match_parent"
                            android:background="@color/alpha_tablayout"
                            android:textColor="@color/punches_text"
                            android:textSize="@dimen/textsize_20"
                            android:text="@string/loss"
                            android:textAllCaps="true"
                            android:gravity="center_vertical"
                            android:paddingLeft="@dimen/height_20"/>

                    </LinearLayout>

                </RelativeLayout>

                <com.striketec.mobile.customview.CustomListView
                    android:id="@+id/listview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                </com.striketec.mobile.customview.CustomListView>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>
