<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/popup_bg"
    android:layout_marginLeft="@dimen/tablayout_padding"
    android:layout_marginRight="@dimen/tablayout_padding"
    android:orientation="vertical"
    android:padding="@dimen/tablayout_padding">

    <com.striketec.mobile.customview.CustomTextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="TITLE"
        android:textAllCaps="true"
        android:textColor="@color/punches_text"
        android:textSize="@dimen/textsize_25" />

    <com.striketec.mobile.customview.CustomEditText
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="@dimen/default_editheight"
        android:layout_marginTop="@dimen/tablayout_padding"
        android:background="@null"
        android:gravity="center"
        android:hint="HINT"
        android:maxLines="1"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:singleLine="true"
        android:textColor="@color/white"
        android:textColorHint="@color/orange"
        android:textSize="@dimen/default_textsize">
    </com.striketec.mobile.customview.CustomEditText>

    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@drawable/bg_editbase" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/tablayout_padding"
        android:orientation="horizontal"
        >

        <com.striketec.mobile.customview.HexagonButton
            android:id="@+id/cancel_btn"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/default_smallbtnheight"
            android:padding="1dp"
            android:text="@string/cancel"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="@dimen/default_textsize"
            app:fill="false"
            app:hexagon_color="@color/octagon_stroke" />

        <com.striketec.mobile.customview.HexagonButton
            android:layout_marginStart="@dimen/default_padding"
            android:id="@+id/ok_btn"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/default_smallbtnheight"
            android:padding="1dp"
            android:text="@string/save"
            android:textAllCaps="true"
            android:textColor="@color/black"
            android:textSize="@dimen/default_textsize"
            app:fill="true"
            app:hexagon_color="@color/orange" />

    </LinearLayout>
</LinearLayout>